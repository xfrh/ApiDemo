@page "/currentLoc"
@using ApiDemoApp.Models
@using System.Text.Json
@inject IHttpClientFactory _client
@inject NavigationManager _navigationManager
<AuthorizeView>
    <NotAuthorized>
         @if (true) { _navigationManager.NavigateTo("login"); }
    </NotAuthorized>
</AuthorizeView>
<h3>Local Navigate Plan</h3>

@if(!string.IsNullOrEmpty(errorMessage))
{
    <div class="h3">@errorMessage</div>
}
else if(coordinace == null)
{
    <div class="h3">Loading....</div>
}
else
{
    <table class="table table-striped" >
        <thead>
           <th> x_axis</th>
           <th> y_axis</th>
           <th> theta</th>
        </thead>
        <tbody>
          
                <tr>
                    <td>@coordinace.x_axis</td>
                    <td>@coordinace.y_axis</td>
                    <td>@coordinace.theta</td>
                </tr>
          
        </tbody>
    </table>
}

@code {
    string? errorMessage;
    Coordinace? coordinace;

    protected  override async Task OnInitializedAsync()
    {
        var client = _client.CreateClient("nav");
        try
        {
            coordinace = await client.GetFromJsonAsync<Coordinace>("pose");
            errorMessage = null;

        }catch(Exception ex)
        {
            errorMessage = ex.Message;
        }
    }

}
